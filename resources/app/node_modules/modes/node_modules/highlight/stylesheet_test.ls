require! {

	'std/test/logger'

	'./stylesheet'
}

{Logger} = logger
{Stylesheet} = stylesheet

$logger = Logger!


# Construction -----------------------------------------------------------------

$logger.separator 'Construction'
$logger.on!

$logger.log Stylesheet!



# Adding -----------------------------------------------------------------------

$logger.separator 'Adding'
$logger.on!

stylesheet = Stylesheet!

$logger.log stylesheet.add {
	color: 'black'
	background: 'white'
	family: 'Consolas'
	-bold
	-italic
	-strike
	-underline
}
$logger.log stylesheet

$logger.log stylesheet.add {
	id: 'Punctuator'
	style: {
		color: 'red'
	}
}
$logger.log stylesheet

$logger.log stylesheet.add {
	id: 'Keyword'
	color: 'blue'
}
$logger.log stylesheet

# Serialization ----------------------------------------------------------------

$logger.separator 'Serialization'
$logger.on!

$logger.log stylesheet.serialize!
