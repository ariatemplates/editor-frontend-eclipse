require! {
# -------------------------------------------------------------------------- App
	'std/test/logger'
# ------------------------------------------------------------------------ Input
	'./color'
}
# ------------------------------------------------------------------ Extractions
{Logger} = logger
{Color} = color



$logger = Logger!



# Construction -----------------------------------------------------------------

$logger.separator 'Construction'
$logger.on!

$logger.log Color!
$logger.log Color 'blue'
$logger.log Color 'grey'
$logger.fail -> Color 'none'
$logger.log Color 0
$logger.log Color 128
$logger.log Color 255
$logger.log Color -1
$logger.log Color 256
$logger.log Color {r: 0 g: 0 b: 0}
$logger.log Color {red: 128 green: 128 blue: 128}
$logger.log Color.rgb 255 255 255

