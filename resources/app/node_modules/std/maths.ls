require! {
# -------------------------------------------------------------------------- 3rd
	_: lodash
# ---------------------------------------------------------------------- Own STD
	'std/array'
}



# FIXME Check the output of the array factory given an undefined or null value
sum = ->
	it = array.factory it
	if it.length is 0 => NaN else _.reduce it, (+), 0

mean = ->
	it = array.factory it
	if it.length is 0 => NaN else (sum it) / (it.length)

isOdd = ->
	if not it? => throw {
		msg: '''No value provided for function 'isOdd'.'''
	}
	(it % 2) > 0
isEven = isOdd >> (not)





exports <<< {
	sum

	mean
	average: mean

	isOdd
	isodd: isOdd
	odd: isOdd

	isEven
	iseven: isEven
	even: isEven
}
